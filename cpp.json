{
	"Allheadfile": {
		"prefix": "cpp",
		"body": [
			"#include <bits/stdc++.h>",
			"using namespace std;",
			"",
			"$0"
		],
		"description": "cpp headfile"
	},
	"Struct": {
		"prefix": "struct",
		"body": [
			"struct ${1:${TM_FILENAME_BASE}}",
			"{",
			"\t${2:/* data */}",
			"};"
		],
		"description": "Snippet for struct"
	},
	"enum": {
		"prefix": "enum",
		"body": [
			"enum ${1:MyEnum}",
			"{",
			"\t$2",
			"};"
		],
		"description": "Snippet for enum"
	},
	"Forloop": {
		"prefix": "for",
		"body": [
			"for (int ${1:i} = 0; ${1:i} < ${2:count}; ++${1:i})",
			"{",
			"\t${3:/* code */}",
			"}"
		],
		"description": "Snippet for forloop"
	},
	"Forloopdec": {
		"prefix": "ford",
		"body": [
			"for (int ${1:i} = $2; ${1:i} < ${3:count}; --${1:i})",
			"{",
			"\t${4:/* code */}",
			"}"
		],
		"description": "Snippet for forloopdec"
	},
	"Whileloop": {
		"prefix": "while",
		"body": [
			"while (${1:/* condition */})",
			"{",
			"\t${2:/* code */}",
			"}"
		],
		"description": "Snippet for whileloop"
	},
	"do": {
		"prefix": "do",
		"body": [
			"do",
			"{",
			"\t$1",
			"} while($2);"
		],
		"description": "Snippet for do...while"
	},
	"foreach": {
		"prefix": "foreach",
		"body": [
			"for (auto ${1:var} : ${2:collection_to_loop})",
